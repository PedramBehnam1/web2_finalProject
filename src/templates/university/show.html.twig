{% extends 'base.html.twig' %}

{% block title %}University{% endblock %}

{% block body %}
    <h1>University</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ university.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ university.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ university.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ university.createdAt ? university.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ university.updatedAt ? university.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedUsername</th>
                <td>{{ university.createdUsername }}</td>
            </tr>
            <tr>
                <th>UpdatedUsername</th>
                <td>{{ university.updatedUsername }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_university_index') }}">back to list</a>

    <a href="{{ path('app_university_edit', {'id': university.id}) }}">edit</a>

    {{ include('university/_delete_form.html.twig') }}
{% endblock %}
