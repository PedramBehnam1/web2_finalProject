{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>RoomNumber</th>
                <td>{{ room.roomNumber }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ room.capacity }}</td>
            </tr>
            <tr>
                <th>MaximumCapacity</th>
                <td>{{ room.maximumCapacity }}</td>
            </tr>
            <tr>
                <th>IsEmpty</th>
                <td>{{ room.isEmpty ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ room.createdAt ? room.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ room.updatedAt ? room.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedUsername</th>
                <td>{{ room.createdUsername }}</td>
            </tr>
            <tr>
                <th>UpdatedUsername</th>
                <td>{{ room.updatedUsername }}</td>
            </tr>
            <tr>
                <th>UserAccounts</th>
                <td>{{ room.userAccounts ? room.userAccounts|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}">back to list</a>

    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
